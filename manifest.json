{
  "name": "Chrome Guide Lines",
  "description": "Pull photoshop-like rulers from the edges of the screen",
  "version": "0.1",
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "web_accessible_resources": [
    "img/scale-h.png",
    "img/scale-v.png",
    "font/entypo-webfont.eot",
    "font/entypo-webfont.svg",
    "font/entypo-webfont.ttf",
    "font/entypo-webfont.woff"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Guide Lines"
  },
  "manifest_version": 2
}
